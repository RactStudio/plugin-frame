<div id="pf-load" pf-data="{}" class="pf-page pf-grid pf-grid-cols-12 pf-gap-2 sm:pf-pr-2.5 md:pf-pr-4 lg:pf-pr-5 pf-pr-2">

  <!-- Header -->
  <header class="pf-mt-3 pf-col-span-12 pf-p-4 pf-pb-0 pf-rounded-md pf-shadow-lg pf-border-[1px] pf-bg-red-500 pf-border-red-300 pf-light:pf-bg-gray-100 pf-light:pf-border-gray-300 pf-dark:pf-bg-gray-800 pf-dark:pf-border-gray-600">
    {% include 'lib/header/header-modern-2.twig' %}
  </header>
  
  <!-- Main Content and Sidebar -->
  <div class="pf-grid pf-col-span-12 pf-gap-2">

    <!-- Main Content -->
    <div class="pf-col-span-12 md:pf-col-span-7 lg:pf-col-span-8">

      <section class="pf-mt-5">
        {% include 'lib/sections/section-hero-modern.twig' with {
          title: title,
          subtitle: content,
          action_button: '<a href="#" class="pf-btn pf-btn-primary">Get Started</a>'
        } %}
      </section>

      <section class="pf-mt-6 pf-p-6">

        <!-- Button and Modal in the same x-data scope -->
        <div x-data="{ showModal: false }">
            <!-- Button outside the modal div -->
            <button @click="showModal = true" class="pf-bg-green-500 pf-text-white pf-py-2 pf-px-4 pf-rounded">
                {{ __('Open Modal') }}
            </button>

          <!-- Only render the modal when showModal2 is true -->
          <template x-if="showModal">
            <!-- Modal Overlay -->
            <div
              x-show="showModal"
              x-transition:enter="pf-transition pf-ease-out pf-duration-600"
              x-transition:enter-start="pf-opacity-0"
              x-transition:enter-end="pf-opacity-100"
              x-transition:leave="pf-transition pf-ease-in pf-duration-400"
              x-transition:leave-start="pf-opacity-100"
              x-transition:leave-end="pf-opacity-0"
              class="pf-flex pf-fixed pf-inset-0 pf-bg-gray-900 pf-bg-opacity-50 pf-justify-center pf-items-center"
            >
              <!-- Modal Content -->
              <div
                x-show="showModal"
                x-transition:enter="pf-transition pf-ease-out pf-duration-600"
                x-transition:enter-start="pf-opacity-0 pf-transform pf-scale-75"
                x-transition:enter-end="pf-opacity-100 pf-transform pf-scale-200"
                x-transition:leave="pf-transition pf-ease-in pf-duration-400"
                x-transition:leave-start="pf-opacity-100 pf-transform pf-scale-200"
                x-transition:leave-end="pf-opacity-0 pf-transform pf-scale-75"
                class="pf-bg-white pf-rounded-lg pf-shadow-lg pf-p-6 pf-max-w-md pf-w-full"
              >
                <h2 class="pf-text-lg pf-font-bold">{{ __('Modal Title') }}</h2>
                <p>{{ __('This is a Flowbite modal controlled by Alpine.js.') }}</p>
                <button @click="showModal = false" class="pf-mt-4 pf-bg-red-500 pf-text-white pf-py-2 pf-px-4 pf-rounded">
                    {{ __('Close') }}
                </button>
              </div>
            </div>
          </template>
        </div>

      </section>

      <section class="pf-mt-6 pf-p-6">
        <h3>{{ __('Lucide Icons') }}</h3>
        <!-- Example: Using Lucide icons -->
        <div>
            <i data-lucide="home"></i> Home
        </div>
        <div>
            <i data-lucide="user"></i> User
        </div>
        <div>
            <i data-lucide="settings"></i> Settings
        </div>
        <i data-lucide="moon"></i> <!-- Dark Mode Icon -->
        <i data-lucide="sun"></i> <!-- Light Mode Icon -->
        <i data-lucide="monitor"></i> <!-- System Mode Icon -->
        <i data-lucide="palette"></i> <!-- Color Mode Icon -->
      </section>

      <section class="pf-mt-6">
        {% include 'lib/sections/section-grid-card.twig' with {
          cards: [
            { title: 'Users', value: '1,250', change: '+5%', icon: 'resources/assets/img/user.png' },
            { title: 'Revenue', value: '$45,000', change: '+12%', icon: 'resources/assets/img/user.png' },
            { title: 'Signups', value: '350', change: '+8%', icon: 'resources/assets/img/user.png' }
          ]
        } %}
      </section>

      <section class="pf-mt-6">
        {% include 'lib/blocks/block-cta.twig' with {
          title: 'Need Assistance?',
          content: 'Reach out to our support team for help with any issues.',
          button: '<a href="#" class="pf-btn pf-btn-secondary">Contact Support</a>'
        } %}
      </section>
    </div>

    {# <!-- Right Sidebar -->
    <div class="pf-col-span-12 md:pf-col-span-3 lg:pf-col-span-2 pf-bg-gray-50 pf-dark:pf-bg-gray-800 pf-rounded pf-shadow-sm">
      {% include 'lib/sidebar/sidebar-modern-right.twig' %}
    </div> #}

  </div>

  <!-- Footer -->
  <footer class="pf-col-span-12 pf-mt-6">
    {% include 'lib/footer/footer-modern.twig' %}
  </footer>

</div>