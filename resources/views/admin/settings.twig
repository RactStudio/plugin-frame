<div id="pf-load" pf-data="{}" class="pf-bg-gray-50 pf-dark:pf-bg-gray-800 pf-py-24 sm:pf-py-32">
  <!-- Dark Mode Toggle -->
  {# {% include 'lib/tailwind-dark-mode.twig' %} #}
    <div class="pf-fixed pf-top-4 pf-right-4 pf-flex pf-items-center pf-gap-2">
        <button 
            class="pf-w-10 pf-h-10 pf-rounded-full pf-flex pf-items-center pf-justify-center pf-bg-gray-200 pf-dark:pf-bg-gray-700"
            pf-on:click="$store.data.toggleDarkMode()"
        >
            <svg pf-x-show="!$store.data.darkMode" xmlns="http://www.w3.org/2000/svg" class="pf-w-6 pf-h-6 pf-text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v2m0 14v2m9-9h-2m-14 0H3m16.95 6.95l-1.414-1.414M6.343 6.343L4.93 4.93m12.02 12.02l1.415 1.415M6.343 17.657l1.414 1.414M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <svg pf-x-show="$store.data.darkMode" xmlns="http://www.w3.org/2000/svg" class="pf-w-6 pf-h-6 pf-text-gray-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79A9 9 0 0111.21 3.05a7 7 0 109.74 9.74z" />
            </svg>
        </button>
    </div>

    <!-- Main Content -->
    <div class="pf-mx-auto pf-max-w-2xl pf-px-6 lg:pf-max-w-7xl lg:pf-px-8">
        <h2 class="pf-text-center pf-text-base pf-font-semibold pf-text-indigo-600 pf-dark:pf-text-indigo-400">
            {{ content }}
        </h2>
        <p class="pf-mx-auto pf-mt-2 pf-max-w-lg pf-text-balance pf-text-center pf-text-4xl pf-font-semibold pf-tracking-tight pf-text-gray-950 pf-dark:pf-text-gray-200 sm:pf-text-5xl">
            {{ __(description, plugin_domain) }}
        </p>
    </div>
</div>
